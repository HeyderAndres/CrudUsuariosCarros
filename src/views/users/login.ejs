<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head") %>

<body>
    <%- include("../partials/header") %>
    <section>
        <article class="form">
            <h2>Formulario de inicio de sesión</h2>
            <form action="/users/profile" method="POST">
                <label for="email">
                    <p>Email:</p>
                    <input class="text-form" type="email" name="email" id="email"
                        value="<%=locals.old && old.email?old.email:'' %>" />
                    <p class="alert">
                        <%=locals.errors && errors.email? errors.email.msg:''  %>
                    </p>
                </label>

                <label for="password">
                    <p>Contraseña:</p>
                    <input class="text-form" type="password" name="password" id="password" />
                    <p class="alert">
                        <%=locals.errors && errors.password? errors.password.msg:''  %>
                    </p>
                </label>
                <label for="recordarme">
                    <p><input type="checkbox" name="recordarme" id="recordarme"> Recordar mi Usuario</p>
                </label>
               
                <span class="buton">
                    <input class="form-buton" type="submit" value="Login">
                    <input class="form-buton" type="reset" value="borrar">
                </span>
            </form>
        </article>
    </section>
</body>
<%- include ("../partials/footer") %> 
</html>